---
import RightSidebar from '../components/right-sidebar.astro';
import Header from '../components/header.astro';

interface Props {
  title: string;
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <Header />
    <main class="grid grid-cols-12 bg-slate-100 ">
      <div class="col-span-3 sticky top-0 pt-12 h-screen flex">
        <div class="ml-auto">
          <RightSidebar />
        </div>
      </div>
      <div class="py-4 px-8 pb-32 col-span-6 overflow-auto">
        <slot />
      </div>
      <div class="col-span-3 sticky top-0 pt-12 h-screen flex">sayem mia</div>
    </main>
  </body>
</html>
