---
import DocsLayout from '../../layouts/docs-layout.astro';

const shadowSizes = [
  { size: 'xs', shadow: '0px 2px 4px rgba(0, 0, 0, 0.08)' },
  { size: 'sm', shadow: '0px 4px 8px rgba(0, 0, 0, 0.125)' },
  { size: 'md', shadow: '0px 8px 16px rgba(0, 0, 0, 0.125)' },
  { size: 'lg', shadow: '0px 16px 32px rgba(0, 0, 0, 0.125)' },
  { size: 'xl', shadow: '0px 32px 64px rgba(0, 0, 0, 0.125)' },
  { size: '2xl', shadow: '0px 64px 128px rgba(0, 0, 0, 0.125)' },
];
---

<DocsLayout title="shadows">
  <div class="flex justify-center bg-gray-200 py-12">
    <div class="inline-grid grid-cols-2 gap-16">
      {
        shadowSizes.map(({ size, shadow }) => (
          <div
            class="p-2 bg-white rounded-md text-slate-500 text-right pt-16 pl-24 font-mono"
            style={{ boxShadow: shadow }}
          >
            {size}
          </div>
        ))
      }
    </div>
  </div>
</DocsLayout>
